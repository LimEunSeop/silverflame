// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"] // 프로덕션 아키텍쳐. 프로덕션 에러 방지
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model App {
  id    String @id @default(uuid())
  name  String @unique
  image String
  url   String
}

model Project {
  id            String         @id @default(uuid())
  name          String         @unique
  description   String
  siteUrl       String?
  githubUrl     String?
  images        ProjectImage[]
}

model ProjectImage {
  id        String   @id @default(uuid())
  url       String
  altText   String
  platform  Platform
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String
}

model Code {
  id           String   @id @default(uuid())
  name         String
  descriptions String[]
  code         String
  language     String?
  tags         String[]
}

enum Platform {
  DESKTOP
  MOBILE
}